<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ListItemView"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showHostelImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            tools:srcCompat="@drawable/bgapp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel Name: "
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/calligraffitti"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hostelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjhkjhkh"
                android:fontFamily="@font/calligraffitti"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel Type: "
                android:fontFamily="@font/calligraffitti"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hostelTypeField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjhkjhkh"
                android:fontFamily="@font/calligraffitti"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel Address: "
                android:fontFamily="@font/calligraffitti"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hostelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjhkjhkh"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:fontFamily="@font/calligraffitti"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Per Person: "
                android:fontFamily="@font/calligraffitti"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hostelRentPerPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjhkjhkh"
                android:fontFamily="@font/calligraffitti"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Rooms: "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/calligraffitti"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hostelNumberOfRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjhkjhkh"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:fontFamily="@font/calligraffitti"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel Building Type: "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/calligraffitti"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/buildingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjhkjhkh"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:fontFamily="@font/calligraffitti"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/hostelPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_bg"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/calligraffitti"
                ></Button>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
